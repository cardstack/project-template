  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Hub",
      "cwd": "${workspaceRoot}/cardhost",
      "program": "${workspaceRoot}/node_modules/@cardstack/hub/bin/cardstack-hub.js",
      "console": "integratedTerminal",
      "args": [
      ],
      "env": {
        "PGPORT": "5432",
        "CARDSTACK_SESSIONS_KEY": "SBgEzGrr5IcpFbRQHQVjfSY/Rt70yXsljfcrl4k99Fw=",
        "PGSEARCH_NAMESPACE": "project_template_development",
        "INITIAL_DATA_DIR": "${workspaceRoot}/cardhost/cardstack",
        "HUB_ENVIRONMENT": "development",
        "CARDSTACK_DEV": true,
        "PORT": "3000",
        "LOG_LEVELS": "*=info"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Hub for acceptance tests",
      "cwd": "${workspaceRoot}/cardhost",
      "program": "${workspaceRoot}/node_modules/@cardstack/hub/bin/cardstack-hub.js",
      "console": "integratedTerminal",
      "args": [
      ],
      "env": {
        "PGPORT": "5432",
        "CARDSTACK_SESSIONS_KEY": "SBgEzGrr5IcpFbRQHQVjfSY/Rt70yXsljfcrl4k99Fw=",
        "PGSEARCH_NAMESPACE": "project_template_test",
        "INITIAL_DATA_DIR": "${workspaceRoot}/cardhost/cardstack",
        "HUB_ENVIRONMENT": "test",
        "CARDSTACK_DEV": true,
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Hub for individual card test",
      "cwd": "${workspaceRoot}/cards/article",
      "program": "${workspaceRoot}/node_modules/@cardstack/hub/bin/cardstack-hub.js",
      "console": "integratedTerminal",
      "args": [
      ],
      "env": {
        "PGPORT": "5432",
        "CARDSTACK_SESSIONS_KEY": "SBgEzGrr5IcpFbRQHQVjfSY/Rt70yXsljfcrl4k99Fw=",
        "PGSEARCH_NAMESPACE": "project_template_test",
        "INITIAL_DATA_DIR": "${workspaceRoot}/cards/article/tests/dummy/cardstack",
        "HUB_ENVIRONMENT": "test",
        "PORT": "3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run ember",
      "cwd": "${workspaceRoot}/cardhost",
      "console": "integratedTerminal",
      "program": "${workspaceRoot}/cardhost/node_modules/.bin/ember",
      "args": [
          "serve",
          "--print"
      ],
      "env": {
        "HUB_URL": "http://localhost:3000"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch node tests",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}",
      "env": {
        "HUB_ENVIRONMENT": "test",
      },
      "args": [
        "./node-test-runner.js",
        "--timeout",
        "200000",
        // "--grep",
        // "does not allow a user to delete"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch card node tests",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "console": "integratedTerminal",
      "cwd": "${workspaceRoot}/cards/board",
      "env": {
        "HUB_ENVIRONMENT": "test",
      },
      "args": [
        "../../node-test-runner.js",
        "--timeout",
        "200000",
        // "--grep",
        // "can register an article with a board when the user session is authorized"
      ]
    },
  ]
}